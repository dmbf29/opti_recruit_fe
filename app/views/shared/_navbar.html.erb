        <input class="form-control string required" type="text" name="team" id="search_query" value="<%= @team&.name %>"/>
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search text-primary"></i>
        </button>
      </div>
    <% end %>
  </div>
