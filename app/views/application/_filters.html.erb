      <select name="states" data-controller="select2" data-select2-options-values='{ "tags": true, "width": "resolve" }' multiple="multiple" class="w-100">
        <option value="">All</option>
        <% @positions.each do |pos| %>
          <option value=""><%= pos %></option>
        <% end %>
      </select>
    <% end %>
    <select class="form-select small-font" aria-label="Default select example">
      <option <%= 'selected' unless params[:position] %> value="All">All</option>
      <% @positions.each do |pos| %>
        <option value="<%= pos %>" <%= 'selected' if params[:position] == pos %>><%= pos %></option>
        <% end %>
      </select>
    </div>
  </div>
