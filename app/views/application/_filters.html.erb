<div class='my-4 row filters'>
  <div class="col-4">
    <div class="input-group filter-label">
      <span class="input-group-text">Age</span>
      <input type="text" aria-label="First name" class="form-control" name='age_min' placeholder='min'>
      <input type="text" aria-label="Last name" class="form-control" name='age_max' placeholder='max'>
    </div>
  </div>
