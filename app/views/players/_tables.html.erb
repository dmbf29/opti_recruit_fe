<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">NAME</th>
      <th scope="col" class='text-center'>AGE</th>
      <th scope="col" class='text-center'>POS</th>
      <th scope="col" class='text-center'>OVA</th>
      <th scope="col" class='text-center'>POT</th>
      <th scope="col" class='text-center'>VAL</th>
      <th scope="col" class='text-center'>WAGE</th>
      <th scope="col" class='text-center'>TOTAL</th>
      <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>
    <% players.each_with_index do |player, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= player.name %></td>
        <td class='text-center'><%= player.age %></td>
        <td class='text-center'><%= player.position %></td>
        <td class='text-center'><%= player.overall %></td>
        <td class='text-center'><%= player.potential %></td>
        <td class='text-center'>€<%= player.value %>M</td>
        <td class='text-center'>€<%= player.wage %>K</td>
        <td class='text-center'><%= player.total %></td>
        <td>
          <%= link_to player_path(player), class: 'text-secondary' do %>
            <i class="fas fa-search"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
